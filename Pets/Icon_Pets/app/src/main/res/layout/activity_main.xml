<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="luunt.icon_pets.MainActivity"
    android:background="@color/default_app">

    <luunt.icon_pets.CustomButton
        android:id="@+id/btn_reg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:text="Register"
        android:layout_centerInParent="true"/>

    <luunt.icon_pets.CircleImageView
        android:id="@+id/img_ava"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cho"
        android:layout_above="@id/btn_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
